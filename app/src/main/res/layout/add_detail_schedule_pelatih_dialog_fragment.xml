<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.pelatih.adddetailschedulepelatih.AddDetailSchedulePelatihDialogFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_detail_schedule"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hari" />

    <Spinner
        android:id="@+id/spnr_hari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@android:layout/simple_list_item_1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal" />

        <ImageButton
            android:id="@+id/pick_date"
            style="@style/Base.Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_tanggal"
            android:src="@drawable/calendar_18dp" />

        <TextView
            android:id="@+id/tv_pickeddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pick_date"
            tools:text="@string/date_format" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_jammulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jam_mulai" />

        <ImageButton
            android:id="@+id/pick_starttime"
            style="@style/Base.Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_jammulai"
            android:src="@drawable/time_18dp" />

        <TextView
            android:id="@+id/tv_pickedstarttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pick_starttime"
            tools:text="@string/time_format" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_jamselesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jam_selesai" />

        <ImageButton
            android:id="@+id/pick_endtime"
            style="@style/Base.Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_jamselesai"
            android:src="@drawable/time_18dp" />

        <TextView
            android:id="@+id/tv_pickedendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pick_endtime"
            tools:text="@string/time_format" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_add_detailjadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add" />
</LinearLayout>